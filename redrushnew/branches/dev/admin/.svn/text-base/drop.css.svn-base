
ul.menu{list-style:none;margin:0;padding:0;}
ul.menu *{margin:0;padding:0}
ul.menu a{
	color:#fff;
	text-decoration:none;
}
ul.menu li{
	position:relative;
	float:left;
}
ul.menu ul{
	position:absolute;
	top:35px;
	left:-5px;
	background:#FFF;
	display:none;
	opacity:0;
	list-style:none;
	text-align:left;
}
ul.menu ul li{
	position:relative;
	width:140px; margin:0;
	background:#666;
} 
ul.menu ul li a {
	display:block;
	padding:5px;
	border-bottom:solid 1px #777;
}
ul.menu ul ul{left:141px;top:0px}
ul.menu .menulink{
	padding-left:10px; 
	padding-bottom:5px;
	font-weight:bold;
	margin:0px 20px 0px 10px;
	width:100%
}
ul.menu .menulink:hover,ul.menu .menuhover{color:#ffffff;}
